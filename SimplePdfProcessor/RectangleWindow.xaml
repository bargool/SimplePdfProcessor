<Window x:Class="SimplePdfProcessor.RectangleWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Закрасить область страницы" Width="330" Height="130"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        FocusManager.FocusedElement="{Binding ElementName=txtSizeX}"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="X:" />
            <TextBox x:Name="txtSizeX" Width="40"/>
            <Label Content="на Y:" />
        	<TextBox x:Name="txtSizeY" Width="40"/>
    	</StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Stretch">
            <Button x:Name="btnGO" Content="Вперед!" IsDefault="True" Click="btnGO_Click" />
            <Button x:Name="btnCancel" Content="Отмена" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>